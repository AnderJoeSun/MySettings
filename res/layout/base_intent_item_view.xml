<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:gravity="center_vertical" >

	<ImageView android:id="@+id/appIcon" android:layout_width="0dip" android:layout_weight="1"
		android:layout_height="wrap_content" android:layout_margin="3dip" />

	<LinearLayout android:orientation="vertical" android:layout_weight="5"
		android:layout_width="0dip" android:layout_height="wrap_content">

		<TextView android:id="@+id/appName" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:textColor="#FFFFF00F"
			android:textSize="20sp" />
		<TextView android:id="@+id/packageName" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
			android:textSize="15sp" />

		<TextView android:id="@+id/className" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
			android:textSize="15sp" />
	</LinearLayout>

</LinearLayout>  